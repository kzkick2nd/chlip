{
  "manifest_version": 2,
  "name": "chlip",
  "version": "1",
  "description": "Copy PageTitle and URL as MarkDown format.",
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "permissions": [
    "tabs",
    "clipboardWrite"
  ],
  "browser_action": {
    "default_icon": "icon.png"
  },
  "icons": {
    "128": "icon.png"
  }
}
